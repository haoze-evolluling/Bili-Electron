{
  "name": "bili-electron",
  "version": "2026.2.5",
  "description": "B站 Electron 客户端",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:user": "electron-builder --win --config.nsis.perMachine=false --config.nsis.artifactName='${productName}-${version}-user-setup.${ext}'",
    "build:win:admin": "electron-builder --win --config.nsis.perMachine=true --config.nsis.artifactName='${productName}-${version}-admin-setup.${ext}'",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "bilibili",
    "electron",
    "client"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.example.bili-electron",
    "productName": "Bili-Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "logo/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "logo/bilibili_icon_198297.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg"],
      "icon": "logo/bilibili_icon_198297.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "logo/bilibili_icon_198297.png"
    }
  }
}
